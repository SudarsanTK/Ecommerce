@model Ecommerce.Areas.Admin.Models.ProductModel

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Product</h2>
        </div>
        <div class="card-body">
            <p class="text-muted">Are you sure you want to delete this product?</p>

            <div class="border rounded p-3 mb-3 bg-light">
                <h4 class="text-dark">@Model.Name</h4>
                <p class="text-muted">@Model.Description</p>
                <p><strong>Price:</strong> $@Model.Price</p>
                <p><strong>Quantity:</strong> @Model.Quantity</p>
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail mt-2" style="max-width: 150px;" />
            </div>

            <form asp-action="DeleteConfirmed" asp-controller="Product" asp-area="Admin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
